<h2>Create a new  contact</h2>

<h4> This contact is being created by <%= current_user.email %>

<%= form_tag '/contacts', method: :post do %>
  <div>
  <%= label_tag :"Full Name" %>
  <%= text_field_tag :name %>
  </div>

  <div>
  <%= label_tag :"Middle Name" %>
  <%= text_field_tag :middle_name %>
  </div>

  <div>
  <%= label_tag :"email Address" %>
  <%= text_field_tag :email_address %>
  </div>

  <div>
  <%= label_tag :"address" %>
  <%= text_field_tag :address %>
  </div>


  </div>

  <div>
  <%= label_tag :"mobile Number" %>
  <%= text_field_tag :mobile_number %>
  </div>

  <div>
  <%= label_tag :"bio" %>
  <%= text_field_tag :bio %>
  </div>

  <div>
  <%= submit_tag "Add new contact" %>
  </div>

<% end %>